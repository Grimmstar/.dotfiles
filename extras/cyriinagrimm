# Font attributes, colors, bg_colors

readonly reset="$(tput sgr0)" bold="$(tput bold)" dim="$(tput dim)" \
    blink="$(tput blink)" underline="$(tput smul)" end_underline="$(tput rmul)" \
    reverse="$(tput rev)" hidden="$(tput invis)" \
